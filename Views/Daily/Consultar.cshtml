@model IEnumerable<projetomvc.Models.Daily>

@{
    Layout = "~/Views/Shared/_LayoutScrum.cshtml";
}    

<table id="dailys" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Modulo</th>
            <th>Data</th>
            <th>Presenca</th>
            <th>Feito</th>
            <th>Fazendo</th>
            <th>Impedimentos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dl in Model)
        {

            <tr>
                <td>@dl.Id</td>
                <td>@dl.Modulo.Nome</td>
                <td>@dl.Data.ToString("dd/MM/yyyy")</td>

                @if (dl.Presenca == true)
                    {
                        <td>Sim</td>
                    } else{
                        <td>NÃ£o</td>
                    }
                    
                <td>@dl.Feito</td>
                <td>@dl.Fazendo</td>
                <td>@dl.Impedimentos</td>
                <td>
                    <button class="btn btn-success"><a href="/Daily/Editar/@dl.Id">Editar Daily</a></button>
                    <button class="btn btn-primary"><a href="/Daily/Excluir/@dl.Id">Excluir Daily</a></button>
                </td>
            </tr>
        }
    </tbody>

</table>