@model projetomvc.DTO.DailyDTO

@{
    Layout = "~/Views/Shared/_LayoutScrum.cshtml";
}



<form asp-controller="Daily" asp-action="Atualizar" method="POST">
    <input type="hidden" asp-for="Id">
    <input type="hidden" asp-for="Starter">

    <div class="form-group col-md-8">
        <label asp-for="Modulo">Modulo</label>
        <select class="form-control" asp-for="Modulo"
            asp-items='@(new SelectList(@ViewBag.Modulo,"Id","Nome"))'></select>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Data">Data</label>
            <input type="date" asp-for="Data" class="form-control" >
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Feito">Feito</label>
        <textarea asp-for="Feito" class="form-control" id="Feito" rows="3"></textarea>
        <span asp-validation-for="Feito" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fazendo">Fazendo</label>
        <textarea class="form-control" asp-for="Fazendo" id="Fazendo" rows="3"></textarea>
        <span asp-validation-for="Fazendo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Impedimentos">Impedimentos</label>
        <textarea class="form-control" asp-for="Impedimentos" id="Impedimentos" rows="3"></textarea>
        <span asp-validation-for="Impedimentos" class="text-danger"></span>
    </div>

    <fieldset class="form-group">
        <legend>Presente?</legend>
        <div class="form-check">
            <label asp-for="Presenca" class="form-check-label">
                <input class="form-check-input" asp-for="Presenca" type="checkbox" checked>
                Sim?
            </label>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Confirmar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}