@model projetomvc.DTO.GrupoDTO

<form asp-controller="Grupo" asp-action="Atualizar" method="POST">
  <input type="hidden" asp-for="Id">


  <div class="form-group col-md-6">
    <label asp-for="ProgramaStart">Programa Start </label>
    <select class="form-control" asp-for="ProgramaStart"
      asp-items='@(new SelectList(@ViewBag.ProgramaStart,"Id","Nome"))'></select>
    <span asp-validation-for="ProgramaStart" class="text-danger"></span>
  </div>

  <div class="form-group col-md-6">
    <label asp-for="Tecnologia">Tecnologia </label>
    <select class="form-control" asp-for="Tecnologia" asp-items='@(new SelectList(@ViewBag.Tec,"Id","Nome"))'></select>
    <span asp-validation-for="Tecnologia" class="text-danger"></span>
  </div>

  <div class="form-group col-md-6">
    <label asp-for="ScrumMaster">Scrum Master</label>
    <select class="form-control" asp-for="ScrumMaster"
      asp-items='@(new SelectList(@ViewBag.Empregado,"Id","Nome"))'></select>
    <span asp-validation-for="ScrumMaster" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Confirmar</button>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}