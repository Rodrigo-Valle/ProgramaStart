@model IEnumerable<projetomvc.Models.Starter>

<table id="Programas" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Letras</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var starter in Model) {
            <tr>
                <td>@starter.Id</td>
                <td>@starter.Nome</td>
                <td>@starter.Letras</td>


                <td>
                    <button class="btn btn-secondary"><a href="/Starter/Editar/@starter.Id">Editar</a></button> 
                    <button class="btn btn-danger"><a href="/Starter/Excluir/@starter.Id">Excluir</a></button>
                </td>
            </tr>
        }    
    </tbody>

</table>